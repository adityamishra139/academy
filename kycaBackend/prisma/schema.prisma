generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String    
  email     String  
  password  String
  isAdmin   Boolean   @default(false)
  phone     String?    @db.VarChar(10) // Add phone number for the User
}

model Inquiry {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
  phone     String   @db.VarChar(10) // Add phone number for the Inquiry
}

model Gem {
  id    Int     @id @default(autoincrement())
  name  String  @db.VarChar(255) // Player's name
  team  String  @db.VarChar(255) // Team details
  img   String  @db.VarChar(255) // Path or URL to the image
}
